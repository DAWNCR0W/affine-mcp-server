AFFINE_BASE_URL=http://localhost:3010
# Optional bearer token (rare for AFFiNE)
AFFINE_API_TOKEN=
# Optional cookie for session-based auth (recommended)
AFFINE_COOKIE=
# Optional extra headers as JSON (e.g. {"Cookie":"..."})
AFFINE_HEADERS_JSON=
# GraphQL path
AFFINE_GRAPHQL_PATH=/graphql
# Optional default workspace id
AFFINE_WORKSPACE_ID=

# Optional email/password to sign in automatically if no cookie/token provided
AFFINE_EMAIL=
AFFINE_PASSWORD=

# Optionally override REST endpoints mapping (JSON)
# AFFINE_ENDPOINTS_JSON={"listDocs":{"path":"/api/workspaces/:workspaceId/docs","method":"GET"}}

# MCP server transport settings
MCP_TRANSPORT=ws
MCP_WS_PORT=7821
